[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[core]
	excludesfile = /Users/sh-murakami/.gitignore_global
	editor = vim -f
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
